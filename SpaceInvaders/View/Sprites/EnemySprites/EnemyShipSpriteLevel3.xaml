        <Rectangle Width="4" Height="15" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}" Canvas.Left="6"/>
        <Rectangle Width="4" Height="15" Canvas.Left="23" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="2" Height="9" Canvas.Left="38" Canvas.Top="22" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="2" Height="9" Canvas.Left="44" Canvas.Top="22" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="2" Height="9" Canvas.Left="10" Canvas.Top="22" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="2" Height="9" Canvas.Left="4" Canvas.Top="22" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="6" Height="10" Canvas.Left="27" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="6" Height="10" Canvas.Left="17" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="4" Height="13" Canvas.Left="28" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}"/>
        <Rectangle Width="4" Height="13" Canvas.Left="18" Canvas.Top="14" Fill="{StaticResource EnemyShipColor}"/>
    </Canvas>
</local:BaseSprite>
