<Page
    x:Class="SpaceInvaders.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="theCanvas" Width="640" Height="480" Background ="Black">
        <TextBlock x:Name="ScoreLabel" Canvas.Left="10" Canvas.Top="443" Text="Score: 0" TextWrapping="Wrap" FontSize="24" FontFamily="Arial" Foreground="White" Height="27"/>
        <TextBlock x:Name="GameOverTextBox" Canvas.Left="231" Canvas.Top="82" Text="Game Over" TextWrapping="Wrap" FontSize="36" Foreground="White"/>
        <TextBlock x:Name="GameStatTextBlock" Canvas.Left="212" Canvas.Top="132" Text="" TextWrapping="Wrap" FontSize="16" Height="118" Width="234" Foreground="White"/>
    </Canvas>
</Page>
